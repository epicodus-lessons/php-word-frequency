{{ include('base.html.twig') }}

<html>
  <body>
    <div class="container">
      <header>
        <h1>Word Frequency Counter</h1>
      </header>
      <form action='/count-results'>
        <label for='search-word'>Enter a word to match: </label>
        <input name='search-word' type='text' required>
        <br><br>
